<%- include ../partials/header.ejs %>


  <header class="banner">
  <%- include ../partials/main_nav.ejs %>
  </header>

<div class="login-wrapper">
<main class="container login-container">


<%- include ../partials/messages.ejs %>
<!-- Message Area -->
<div class="row">
        <div class="offset-md-4 col-md-4 login-content">
            <h1 class ="tournaments-title">Please login</h1>
            <form class="input-data" method="POST" autocomplete="off">
                <fieldset class="form-group login-input">
                    <p>
                    <label for="username">Username: </label>
                    </p>
                    <input type="text" class="form-control w-100"
                    name="username" placeholder="Enter username"
                    id="username" require autofocus>
                </fieldset>

                <fieldset class="form-group">
                    <p>
                    <label for="password">Password: </label>
                    </p>
                    <input type="password" class="form-control w-100"
                    name="password" placeholder="Enter password"
                    id="password" require>
                </fieldset>

                <div id="register-here">
                    <p>Don't Have an account?</p>
                    <a href="/register">Register Here</a>
                </div>

                <fieldset class="form-group text-right">
                    <input type="submit" class="btn btn-primary" value="Login">
                    <a href="/">
                    <input type="button" class="btn btn-warning" value="Cancel">
                    </a>
                </fieldset>
            </form>
        </div>
</div>
</main>
</div>

