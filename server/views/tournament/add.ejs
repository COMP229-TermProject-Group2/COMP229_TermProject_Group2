<%- include ../partials/header.ejs %>

  <header class="banner">
  <%- include ../partials/main_nav.ejs %>
  </header>
  
<!-- content for the create page -->
<div class="container add-container">
    <div class="row" style="color: black;">
        <div class="offset-md-2 col-md-8 add-content">
            <form class="form" method="post">
                <div class="form-group">
                    <p>
                    <label for="nameTextField">Name</label>
                    </p>
                    <input type="text" class="form-control"
                        id="nameTextField"
                        placeholder="Enter The Tournament's Name"
                        name="name" required>
                </div>
             
                <div class="form-group">
                    <p>
                    <label for="descriptionTextField">Tournament Description:</label>
                    </p>
                    <input type="text" class="form-control"
                        id="descriptionTextField"
                        placeholder="Describe the tournament"
                        name="description" required>
                </div>
                <div class="form-group">
                    <h4>Tournament Size:</h4>
                    <input type="radio"
                        id="4"
                        name="size"
                        value = 4
                        required>
                        <label for="4">4</label>
                </div>
                <div class="form-group ">
                    <input type="radio"
                        id = "8"
                        name = "size"
                        value = 8 required>
                        <label for="8">8</label>
                </div>
                <div class="form-group ">
                    <input type="radio"
                        id = "16"
                        name = "size"
                        value = 16 required>
                        <label for="16">16</label>
                </div>
                <div class="form-group last-input">
                    <input type="radio"
                        id = "32"
                        name = "size"
                        value = 32 required>
                        <label for="32">32</label>
                </div>
                <div class="form-group">
                    <p>
                    <label for="dateTextField">Date:</label>
                    </p>
                    <input type="date" class="form-control"
                        id="dateTextField"
                        placeholder="Enter The Tournament's Date"
                        name="date" required>
                </div>
                <div class="form-group">
                    <h4>Active Status:</h4>
                    <input type="radio"
                        id="true"
                        name="active"
                        value="true" required>
                        <label for="true">True</label>
                </div>
                <div class="form-group last-input">
                    <input type="radio"
                        id="false"
                        name="active"
                        value="false" required>
                        <label for="false">False</label>
                </div>
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Add The Tournament
                </button>
                <a href="/tournaments" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel Changes
                </a>
            </form>
        </div>
    </div>
</div>
<div class="add-banner">
    <div class="add-message">
        <h1 class="hero-title">Game On!</h1>
    </div>
</div>
