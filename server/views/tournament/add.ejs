<%- include ../partials/header.ejs %><%- include ../partials/main_nav.ejs %>
  <body>
    <h1>Welcome to the <%= title %> page</h1>
  </body>
<!-- content for the create page -->
<div class="container">
    <div class="row" style="color: black;">
        <div class="offset-md-2 col-md-8">
            <form class="form" method="post">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control"
                        id="nameTextField"
                        placeholder="Enter The Tournament's Name"
                        name="name" required>
                </div>
                <div class="form-group">
                    <label for="organizerTextField">Organizer:</label>
                    <input type="text" class="form-control"
                        id="organizerTextField"
                        placeholder="Enter The Tournament's Organizer"
                        name="organizer" required>
                </div>
                <div class="form-group">
                    <label for="sizeTextField">Size:</label>
                    <input type="text" class="form-control"
                        id="sizeTextField"
                        placeholder="Enter The Tournament's Size"
                        name="size" required>
                </div>
                <div class="form-group">
                    <label for="dateTextField">Date:</label>
                    <input type="text" class="form-control"
                        id="dateTextField"
                        placeholder="Enter The Tournament's Date"
                        name="date" required>
                </div>
                <div class="form-group">
                    <label for="statusTextField">Active Status:</label>
                    <input type="text" class="form-control"
                        id="statusTextField"
                        placeholder="Is Tournament Active?"
                        name="active" required>
                </div>
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Add The Tournament
                </button>
                <a href="/tournaments" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel Changes
                </a>
            </form>
        </div>
    </div>
</div>
<%- include ../partials/bottom_nav.ejs %> <%- include ../partials/footer.ejs %>