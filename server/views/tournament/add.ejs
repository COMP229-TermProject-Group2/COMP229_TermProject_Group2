<%- include ../partials/header.ejs %>

  <header class="banner">
  <%- include ../partials/main_nav.ejs %>
  </header>
  
<!-- content for the create page -->
<div class="container add-container">
    <div class="row" style="color: black;">
        <div class="offset-md-2 col-md-8 add-content">
            <form class="form" method="post">
                <div class="form-group">
                    <p>
                    <label for="nameTextField">Name</label>
                    </p>
                    <input type="text" class="form-control"
                        id="nameTextField"
                        placeholder="Enter The Tournament's Name"
                        name="name" required>
                </div>
                <div class="form-group">
                    <p>
                    <label for="organizerTextField">Organizer:</label>
                    </p>
                    <input type="text" class="form-control"
                        id="organizerTextField"
                        placeholder="Enter The Tournament's Organizer"
                        name="organizer" required>
                </div>
                <div class="form-group">
                    <p>
                    <label for="sizeTextField">Size:</label>
                    </p>
                    <input type="text" class="form-control"
                        id="sizeTextField"
                        placeholder="Enter The Tournament's Size"
                        name="size" required>
                </div>
                <div class="form-group">
                    <p>
                    <label for="dateTextField">Date:</label>
                    </p>
                    <input type="date" class="form-control"
                        id="dateTextField"
                        placeholder="Enter The Tournament's Date"
                        name="date" required>
                </div>
                <div class="form-group">
                    <h4>Active Status:</h4>
                    <input type="radio"
                        id="true"
                        name="active" 
                        value="true" required>
                        <label for="true">True</label>
                </div>
                <div class="form-group last-input">
                    <input type="radio"
                        id="false"
                        name="active" 
                        value="false" required>
                        <label for="false">False</label>
                </div>
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Add The Tournament
                </button>
                <a href="/tournaments" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel Changes
                </a>
            </form>
        </div>
    </div>
</div>
<div class="add-banner">
    <div class="add-message">
        <h1 class="hero-title">Game On!</h1>
    </div>
</div>
